<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >

    <Button
        android:id="@+id/btn_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="按钮1"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="按钮2"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_two"
        android:layout_below="@+id/btn_one"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="按钮3"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/btn_three"
        android:layout_below="@+id/btn_two"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="按钮4"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="showToast"
        android:background="@drawable/selector_orange"
        android:layout_below="@id/btn_three"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/btn_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="文字1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="#FFAD33"
        android:gravity="center"
        android:layout_below="@+id/btn_four"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>